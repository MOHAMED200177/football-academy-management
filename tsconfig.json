{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist" // Ensure compiled files go to the dist directory
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}